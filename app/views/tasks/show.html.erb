<div class="container card mx-auto mt-5 p-3">
  <div class="container d-flex gap-1 align-items-center">
    <h1><%= @task.title %></h1>
    <div class="container d-flex gap-1 justify-content-end align-items-center">
      <%= link_to edit_task_path, class: 'btn btn-dark' do %>
        <i class="far fa-edit"></i>
      <% end %>
      <%= link_to task_path(@task), method: :delete, class: 'btn btn-danger', data: { confirm: "Are you sure you want to delete this task?" } do %>
        <i class="far fa-trash-alt"></i>
      <% end %>
      </div>
  </div>

  <p><%= @task.details %></p>
  <br>
  <% if @task.completed %>
      <p class="text-secondary"><i class="fas fa-check-square"></i> This task is completed</p>
    <% else %>
      <p class="text-secondary"><i class="far fa-square"></i> This task in not yet completed</p>
    <% end %>

  </div>
</div>
  <div class="container mt-3">
    <%= link_to tasks_path, class: 'btn btn-light' do %>
      <i class="fas fa-home"></i>
    <% end %>
