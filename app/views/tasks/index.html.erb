<div class="container card mx-auto mt-5 p-3">
  <div class="container d-flex align-items-center">
    <h1>Tasks</h1>
    <%= link_to new_task_path, class: 'btn btn-light m-2' do %>
      +
    <% end %>
  </div>

  <div class="container">
    <% @tasks.each do |task| %>
      <% if task.completed %>
        <div class="container d-flex gap-3 mt-3">
          <p class="m-0"><i class="fas fa-check-square"></i> <%= link_to task.title, task_path(task) %></p>
          <%= link_to task_path(task), method: :delete, class: 'text-danger', data: { confirm: "Are you sure you want to delete this task?" } do %>
    <i class="far fa-trash-alt"></i>
  <% end %>
        </div>
      <% else %>
        <div class="container d-flex gap-3 mt-3">
          <p class="m-0"><i class="far fa-square"></i> <%= link_to task.title, task_path(task) %></p>
          <%= link_to task_path(task), method: :delete, class: 'text-danger', data: { confirm: "Are you sure you want to delete this task?" } do %>
    <i class="far fa-trash-alt"></i>
  <% end %>
          </div>
      <% end %>
    <% end %>
  </div>

</div>
